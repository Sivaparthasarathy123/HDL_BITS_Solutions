module top_module(
    input [31:0] a,
    input [31:0] b,
    output [31:0] sum
);
    wire carry;
    wire [15:0] sum_low;
    wire [15:0] sum_high;

    // Lower 16 bits adder
    add16 adder1 (.a(a[15:0]),.b(b[15:0]),.cin(1'b0),.sum(sum_low),.cout(carry));

    // Upper 16 bits adder
    add16 adder2 (.a(a[31:16]),.b(b[31:16]),.cin(carry),.sum(sum_high),.cout());

    // Combine both 16-bit results into one 32-bit sum
    assign sum = {sum_high, sum_low};
endmodule
